@model BibliotecaUTN.Models.Libro

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Libro</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">
            <img src="@Model.Portada" style="max-width: 400px; height: auto; " />
        </dt>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FK_EditorialLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FK_EditorialLibro.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FK_GeneroLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FK_GeneroLibro.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FK_PaisLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FK_PaisLibro.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Año)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Año)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
    </dl>

    <h2>Autores</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AutoresLibros)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FK_Autor.Nombre)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdLibro">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
